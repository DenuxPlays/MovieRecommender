@model MovieRecommender.Model.LoginModel
@{
    ViewData["Title"] = "Movie Recommender - Login";
}

<div class="text-center">
    <h1 class="display-4">Movie Recommender</h1>
    <p class="lead">Please enter your token to access the application</p>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form asp-action="Login" asp-controller="User" method="post" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="Token" class="form-label">Access Token</label>
                    <input asp-for="Token" class="form-control" required
                           placeholder="Enter your token"/>
                    <span asp-validation-for="Token" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Login</button>
            </form>

            <div class="text-center">
                <p class="text-muted">Don't have an account?</p>
                <a href="/User/Register" class="btn btn-outline-secondary">Register New User</a>
            </div>
        </div>
    </div>
</div>
